<!doctype html>
<html class="no-js" lang="zxx">

<% include inc-head %>

<input id="chknum" type="hidden" value="<%=productName.length%>">

<body>
	<!--[if lte IE 9]>
		<p class="browserupgrade">You are using an <strong>outdated</strong> browser. Please <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and security.</p>
	<![endif]-->

	<!-- Main wrapper -->
	<div class="wrapper" id="wrapper">

		<% include inc-header %>

        <!-- Start Bradcaump area -->
        <div class="ht__bradcaump__area bg-image--4">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner text-center">
                            	<h2 class="bradcaump-title"><i class="fas fa-credit-card fa-2x"></i></h2>
                                <nav class="bradcaump-content">
                                  <span class="brd-separetor">주문</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Bradcaump area -->
        <!-- Start Checkout Area -->
        <section class="wn__checkout__area section-padding--lg bg__white">
        	<div class="container">
        		<div class="row">
        			<div class="col-lg-6 col-12">
        				<div class="customer_details">
        					<h3>주문 하기</h3>
        					<div class="customar__field">
        						<div class="input_box">
        							<label>배송지 <span>*</span></label>
											<form name="form2" action="/src/buyer/basket/buy">
        							<input name="userAddr"  type="text" value="<%=userAddr%>">
										</form>
										</div>
        					</div>

        				</div>
        			</div>
        			<div class="col-lg-6 col-12 md-mt-40 sm-mt-40">
        				<div class="wn__order__box">
        					<h3 class="onder__title">장바구니</h3>
        					<ul class="order__total">
        						<li>상품</li>
        						<li>가격</li>
        					</ul>
        					<ul class="order_product">
										<%
										for(var i=0;i<productName.length;i++){
											%>

											<li><%=productName[i]%> × <%=productCount[i]%><span><%=productPrice[i]%>원</span></li>

											<%
										}
										%>
        					</ul>
        					<!-- <ul class="shipping__method">
        						<li>Cart Subtotal <span>$48.00</span></li>

        					</ul> -->
        					<ul class="total__amount">
        						<li>결제 가격 <span><%=deliveryPrice%>원</span></li>
        					</ul>
        				</div>
					    <div id="accordion" class="checkout_accordion mt--30" role="tablist">
						    <div class="payment">
						        <div class="che__header" role="tab" id="headingOne">
						          	<a href="javascript:checkout()" class="checkout__title"  style="
									  background: #e59285 none repeat scroll 0 0;
									  display: flex;
									  height: 60px;
									  justify-content: space-between;
									  line-height: 60px;
									  padding: 0 40px;
									  color: white;
									  font-size: 20px;
								  ">
						                <span>결제하기</span>
									  </a>
									  
									  <script>
									  function checkout(){

										var chk = chknum.value;
										if(chk == '0'){
											alert('장바구니에 제품이 없습니다.')
										}else{
											document.form2.submit();
										}
									  }
									  </script>
								</div>
								</a>
						        <div id="collapseOne" class="collapse show" role="tabpanel" aria-labelledby="headingOne" data-parent="#accordion">
					            	<div class="payment-body">주문해 주셔서 감사합니다!</div>
						        </div>
						    </div>



					    </div>

        			</div>
        		</div>
        	</div>
        </section>
		<!-- End Checkout Area -->


		<% include inc-footer %>


	</div>
	<!-- //Main wrapper -->

    <% include inc-script %>

</body>
</html>
