<!doctype html>
<html class="no-js" lang="zxx">

<% include inc-head %>

<body>
	<!-- Main wrapper -->
	<div class="wrapper" id="wrapper">

		<% include inc-header %>

        <!-- Start Bradcaump area -->
        <div class="ht__bradcaump__area bg-image--7">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="bradcaump__inner text-center">
                            	<h2 class="bradcaump-title"><i class="fas fa-list fa-2x"></i></h2>
                                <nav class="bradcaump-content">
                                  <span class="brd-separetor">판매자 목록</span>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
		<!-- End Bradcaump area -->


		<!-- Start My Account Area -->
		<section class="my_account_area pt--80 pb--55 bg--white">
				<div class="container chswhite mb-5">
						<div class="row">
							<div class="col-md-12 col-sm-12 ol-lg-12">

								<div class="m-5"></div>

								<h3 class="account__title mt-3">판매자 목록</h3><br>
								<form action="#">
									<div class="table-content wnro__table table-responsive">
										<table>


											<colgroup>
												<col width="20%">
												<col width="50%">
												<col width="30%">
												<col width="20%">
												<col width="20%">
											</colgroup>

											<thead>
												<tr class="title-top">
													<!-- <th class="product-thumbnail">Num</th> -->
													<th class="product-thumbnail">이름</th>
													<th class="product-thumbnail">주소</th>
													<th class="product-thumbnail">전화번호</th>
													<th class="product-thumbnail" colspan="2">상세내역보기 / 삭제</th>
													<!-- <th class="product-name">remove</th> -->
												</tr>
											</thead>
											<tbody>
												<% for(var i=page*5-5; i<page*5;i++){ %>
													<% if(i >= user.length) {
															break;
														} %>
												<tr>
													<!-- <td class="product-price"><span class="amount"><%=user[i].userNum%></span></td> -->
													<td class="product-price"><a href='/src/admin/sellerManagement/detail?userNum=<%=user[i].userNum%>'><%=user[i].userName%></a></td>
													<td class="product-price"><%=user[i].userAddr%></td>
													<td class="product-price"><%=user[i].userPhone%></td>
													<td class="product-price"><a href='/src/admin/sellerManagement/detail?userNum=<%=user[i].userNum%>'><i class="fas fa-info-circle"></i></a></td>
													<td class="product-price" ><a href="javascript:remove(<%=user[i].userNum%>)"><i class="fas fa-window-close" aria-hidden="true"></i></a></td>
												</tr>

												<% } %>

												<script>
													function remove(n) {
														result = confirm("정말로 삭제하시겠습니까?")

														if (result) {
															location.href = '/src/admin/sellerManagement/delete?userNum=' + n
														}
														else return;
													}
												</script>

											</tbody>
										</table>
									</div>
								</form>
								<div class="cartbox__btn">
									<div class="row">
										<div class="col-sm-12 col-md-5">
											<div class="dataTables_info" id="dataTable_info" role="status" aria-live="polite"><%=user.length%>
												entries
											</div>
										</div>
										<div class="col-sm-12 col-md-7">
											<div class="dataTables_paginate paging_simple_numbers" id="dataTable_paginate">
												<ul class="pagination">
													<% if(page == 1) { %>
														<li class="paginate_button page-item previous disabled" id="dataTable_previous"><a href="/src/admin/sellerManagement?page=<%=parseInt(page)-1%>"
																aria-controls="dataTable" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
													<% } else { %>
														<li class="paginate_button page-item previous" id="dataTable_previous"><a href="/src/admin/sellerManagement?page=<%=parseInt(page)-1%>"
																aria-controls="dataTable" data-dt-idx="0" tabindex="0" class="page-link">Previous</a>
													<% } %>
													</li>


													<%
																								for(var i=1;i<user.length/5 + 1;i++){
																									%>
													<li class="paginate_button page-item "><a href="/src/admin/sellerManagement?page=<%=i%>" aria-controls="dataTable"
															data-dt-idx="<%=i%>" tabindex="0" class="page-link"><%=i%></a></li>
													<%
													}
													console.log(Math.floor(user.length/5))
													%>
													<% if(parseInt(page) == (Math.floor(user.length/5)+1)) { %>
														<li class="paginate_button page-item next disabled" id="dataTable_next"><a href="/src/admin/sellerManagement?page=<%=parseInt(page)+1%>"
																aria-controls="dataTable" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li>
													<% } else { %>
														<li class="paginate_button page-item next" id="dataTable_next"><a href="/src/admin/sellerManagement?page=<%=parseInt(page)+1%>"
																aria-controls="dataTable" data-dt-idx="7" tabindex="0" class="page-link">Next</a></li>
													<% } %>
												</ul>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
		</section>
		<!-- End My Account Area -->

		<% include inc-footer %>


	</div>
	<!-- //Main wrapper -->
	<% include inc-script %>


</body>
</html>
